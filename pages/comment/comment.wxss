.container{
  padding: 20rpx;
}

.container .top-group{
  width: 100%;
  height: 40rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 32rpx;
}

.container .top-group .top-image{
  width: 40rpx;
  height: 100%;
  margin-right: 10rpx;
}

.container .top-group .top-title{
  color: #41be57;
  margin-right: 10rpx;
}

.container .top-group .top-rate{
  color: #ccc;
}

.comment-title{
  margin-top: 40rpx;
  font-size: 36rpx;
}

.paginate{
  width: 100%;
  height: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 40rpx;
}

